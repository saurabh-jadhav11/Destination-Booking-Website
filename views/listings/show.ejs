<% layout('layout/boiletplate')%>

<div class="row">
<div class="col-6 offset-2 mt-1">
    <h3>Listing details</h3>


    <div class="card show-card" style="width: 50rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing" style="height: 30rem;">
        <div class="card-body">
         <h5 class="card-title"><b><%= listing.title  %></b></h5>
          <p class="card-text">

            <%= listing.description%><br> 
            &#8377;<%= listing.price.toLocaleString("en-IN")  %>/Night<br>
            <%= listing.location%><br>
            <%= listing.country%>


          </p>


          <div class="form-btn-show">
          <a href="/listings/<%=listing._id  %>/edit" class="btn btn-primary">Edit</a>

          <form method="post" action="/listings/<%= listing.id  %>?_method=Delete" >
            <button class="btn btn-dark del"  >Delete</button>
        </form>

    </div>
        </div>
      </div>

</div>

</div>

   

