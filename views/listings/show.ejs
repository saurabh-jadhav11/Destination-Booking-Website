<% layout('layout/boiletplate')%>

<div class="row">
<div class="col-6 offset-2 mt-1">
    <h3><%= listing.title  %></h3>


    <div class="card show-card listing-card" style="width: 50rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing" style="height: 30rem;">
        <div class="card-body">
        
          <p class="card-text">

            <%= listing.description%><br> 
            &#8377;<%= listing.price.toLocaleString("en-IN")  %>/Night<br>
            <%= listing.location%><br>
            <%= listing.country%>


          </p>


          <div class="form-btn-show">
          <a href="/listings/<%=listing._id  %>/edit" class="btn btn-primary sub-btn">Edit</a>

          <form method="post" action="/listings/<%= listing.id  %>?_method=Delete" >
            <button class="btn btn-dark del"  >Delete</button>
        </form>

    </div>
        </div>
      </div>

</div>


        <div class="col-7 offset-2 mb-2 ">
            <hr>
            <h4>Leave a review</h4>
            <form method="post" action="/listings/<%=listing.id %>/review" class="needs-validation" novalidate>
                <div class="mb-2">
                <label for="review[rating]" class="form-lable">Rating</label>
                
                <input type="range" class="form-control form-range "name="review[rating]" min="1" max="5">
            </div>

            <div class="mb-2">
                <label for="content"class="form-lable">Comment</label>
                <textarea name="review[content]" cols="30" rows="5" class="form-control" required></textarea> 
                <div class="invalid-feedback">Add a comment for a review</div>
            </div>
            <button class="btn-outline-dark btn">Submit</button>
            </form>
       
    
      


          <div class="row mt-2">

            <hr>
           <h4>All reviews</h4>

                <% for(review of listing.review){ %>

                    <div class="card rev-card  col-5 ms-3 mb-2">

                        <div class="card-body">
                        <h5 class="card-title">Jane Deo</h5>
                        <h6 class="card-subtitle mb-2 text-body-dark"><%=review.rating%> stars</h6>
                        <p class="card-text"><%=review.content%></p>
                        


                        <form method="post" action="/listings/<%=listing.id%>/review/<%=review._id%>?_method=DELETE">
                            <button class="btn btn-dark btn-sm mb-2">Delete</button>
                        </form>

                    </div>
                </div>
                <% } %>

            </div>

        </div> 
   
    </div> 
</div>
   

